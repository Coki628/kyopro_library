{
    "version": "2.0.0",
    // 参考：https://stackoverflow.com/questions/49237792/vs-code-task-and-python-virtual-environment
    // タスク実行前にpython環境をセットする
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/C",
                    "C:\\Users\\srcn4\\.virtualenvs\\kyopro-zeOHEd9V\\Scripts\\activate.bat",
                    "&"
                ]
            }
        }
    },
    "tasks": [
        {
            // oj-test用ビルド
            "label": "test_build",
            "type": "shell",
            "command": "g++",
            "args": [
                // ローカルデバッグ用マクロを定義
                "-D=__LOCAL",
                "-g3",
                "-O0",
                "-D_GLIBCXX_DEBUG",
                "-Wall",
                // windowsでコンパイルこけるのでコメントアウト
                // "-fsanitize=undefined",
                // oj-bundle済の提出用ファイル
                "_dist\\main.cpp",
                "-std=c++17",
                "-o",
                "${fileDirname}\\a.exe"
            ],
            "dependsOn": [
                "oj-bundle"
            ],
        },
        {
            // デバッグ用ビルド
            "label": "debug_build",
            "type": "shell",
            "command": "g++",
            "args": [
                // ローカルデバッグ用マクロを定義
                "-D=__LOCAL",
                "-g3",
                "-O0",
                "-D_GLIBCXX_DEBUG",
                "-Wall",
                // windowsでコンパイルこけるのでコメントアウト
                // "-fsanitize=undefined",
                // デバッグしたいのでoj-bundle前の元ファイル
                "${fileDirname}\\${fileBasename}",
                "-std=c++17",
                "-o",
                "${fileDirname}\\a.exe"
            ],
            "dependsOn": [
                "oj-bundle"
            ],
        },
        {
            // 提出用ファイル_dist/main.cppの生成
            "label": "oj-bundle",
            "type": "shell",
            "command": "python",
            "args": [
                // src -> dist 変換
                "_dist/prepare.py",
                "${fileDirname}\\",
                "${fileBasename}",
                "&",
                "oj-bundle",
                "_dist\\tmp.cpp",
                ">",
                "_dist\\main.cpp",
                "&",
                // 整形処理
                "python",
                "_dist\\finalize.py"
            ],
        },
        {
            "label": "oj-test",
            "type": "shell",
            "command": "cd",
            "args": [
                "${fileDirname}",
                "&",
                "oj",
                "test"
            ],
            "dependsOn": [
              "test_build"
            ],
            "group": {
                "kind": "build",
                // この指定があるやつがctrl+shift+Bで実行される
                "isDefault": true
            },
        },
    ]
}
// 参考：http://koturn.hatenablog.com/entry/2018/07/29/180000
