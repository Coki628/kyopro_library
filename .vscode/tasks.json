{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g3",
                "-O0",
                "-D_GLIBCXX_DEBUG",
                "-Wall",
                // windowsでビルドこけるのでコメントアウト
                // "-fsanitize=undefined",
                "${fileDirname}\\${fileBasename}",
                "-std=c++17",
                "-o",
                "${fileDirname}\\cpp.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
// 参考：http://koturn.hatenablog.com/entry/2018/07/29/180000
